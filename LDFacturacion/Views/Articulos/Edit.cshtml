@model LDFacturacionDO.Articulo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="~/Content/modalStyle.css" type="text/css" rel="stylesheet" />
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <div class="container" style="width:40%;margin-top:2%">
                <div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false">
                    <br /><br />
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Editar Articulo</h3>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("Edit", "Articulos", FormMethod.Post, new { @class = "signup-form2", enctype = "multipart/form-data" }))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.codigo, new { @class = "form-control", @placeholder = "Codigo Productosss", required = "required" })

                                    <label>Descripción:</label>
                                    @Html.EditorFor(s => s.descripcion, new { @placeholder = "Descripción", id = "desc", required = "required", type = "text", htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    <label>Costo:</label>
                                    @Html.EditorFor(model => model.costo, "{0:n2}", new { @placeholder = "Costo", required = "required", htmlAttributes = new { @class = "form-control", id = "money" } })
                                    <br />
                                    <label>Precio:</label>
                                    @Html.EditorFor(model => model.precio, "{0:n2}", new { @placeholder = "Precio", required = "required", htmlAttributes = new { @class = "form-control", id = "money" } })
                                    <div class="form-label-group ">
                                        <br />
                                        @{
                                            List<SelectListItem> listItems2 = new List<SelectListItem>();
                                            listItems2.Add(new SelectListItem
                                            {
                                                Text = "Activo",
                                                Value = "true",
                                            });
                                            listItems2.Add(new SelectListItem
                                            {
                                                Text = "Inactivo",
                                                Value = "false",
                                                Selected = true
                                            });
                                        }
                                        <div class="form-label-group">
                                            <label>Estado:</label>
                                            @Html.DropDownListFor(model => model.activo, listItems2, new { @class = "form-control", Type = "text", Data_placeholder = "Estado", required = "required" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="modal-footer">

                                        <input type="button" value="Volver" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Articulos")';" />
                                        <input type="submit" value="Cambiar" class="btn btn-primary" id="btnSubmit" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/modals.js"></script>
}
