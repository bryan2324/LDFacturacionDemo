@model LDFacturacionDO.Factura_Articulo

@{
    @Html.Raw(TempData["msg"])
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Styles {
    <link href="~/Content/modalStyle.css" type="text/css" rel="stylesheet" />
}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <div class="container" style="width:40%;margin-top:2%">
                <div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false">
                    <br /><br />
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title">Crear factura</h3>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("Create", "Factura_Articulo", FormMethod.Post, new { @class = "formArt", enctype = "multipart/form-data" }))
                                {
                                    <label>Codigo:</label>
                                    @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", id = "codProducto", @placeholder = "Ingrese el codigo del artículo", required = "required" })
                                    <br />
                                    <label>Cantidad:</label>
                                    @Html.TextBoxFor(model => model.cantidad, new { @class = "form-control", id = "cantidad", @placeholder = "Cantidad de artículos", required = "required", @Value = "1" })
                                    <br /><br />
                                    <div class="modal-footer">
                                        <input type="button" value="Volver" class="btn btn-success" onclick="location.href='@Url.Action("Preview", "Factura")';" />
                                        <input type="submit" value="Agregar Articulo" class="btn btn-primary" id="btnSubmit" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/modals.js"></script>
}
